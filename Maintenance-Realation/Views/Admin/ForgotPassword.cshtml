@model Society_Models.ViewModels.ForgotPasswordViewModel

<div class="row col-md-10 offset-md-1">
    <h1 class="text-center text-primary pt-2">Forgot Password</h1>
    <form method="post" asp-controller="Admin" asp-action="ForgotPassword">
        <div class="border p-2 rounded">
            <p class="text-center">Forgot Password</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="col-12"></label>
                <div class="col-md-12">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group pt-3">

                <div class="col-md-6 offset-md-3">
                    <button class="btn btn-success form-control" type="submit">
                        Forgot Password
                    </button>
                </div>
                <div class="row">
                    <div class="col-6">
                        <a asp-action="Register">Register as new user?</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}