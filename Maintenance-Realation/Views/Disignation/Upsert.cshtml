@model Disignation

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.Id != 0 ? "Update" : "Add") Designation
                    
                </h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" asp-action="Upsert" asp-controller="Disignation">
            <div class="border p-3 mt-4">
                <input asp-for="Id" hidden />
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisignationName" class="form-control border-0 shadow" />
                    <label asp-for="DisignationName" class="ms-2">Designation Name</label>
                    <span asp-validation-for="DisignationName" class="text-danger"></span>
                </div>
            </div>
               

                <div class="row mt-3">
                  @{

                    if(Model.Id == 0)
                    {
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        </div>
                    }
                    else{
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        </div>
                    }

                   }
                   

                    <div class="col-6 col-md-3">
                        <a asp-controller="Disignation" asp-action="Index" class="btn btn-secondary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


        </form>
    </div>
</div>

