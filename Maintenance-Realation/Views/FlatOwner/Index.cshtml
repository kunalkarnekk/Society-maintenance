@model List<FlatOwner>


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">All Flat Owners</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                
            </div>
           
            <div class="col-6 text-end">
                <a asp-controller="FlatOwner" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Owners
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Contact Number
                    </th>
                    <th>
                        Flat Number
                    </th>
                    <th>
                        Owner Type
                    </th>

                    <th>
                        Society Member
                    </th>

                    <th>
                        Active
                    </th>


                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.FirstName</td>
                            <td>
                                @obj.LastName
                            </td>
                            <td>
                                @obj.Email
                            </td>
                            <td>
                                @obj.ContactNumber
                            </td>
                            <td>
                                @obj.FlatNumber
                            </td>
                            <td>
                                @obj.OwnerType
                            </td>

                            <td>
                                @obj.IsSocietyMember
                            </td>
                            <td>
                                @obj.IsActive
                            </td>

                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="FlatOwner" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="FlatOwner" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                }
                else
                {
                    <h1> NO FlatOwners </h1>
                }

            </tbody>
        </table>

    </div>
</div>