                </div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Maintenance.ReceivedAmount" class="form-control border-0 shadow" />
                    <label asp-for="Maintenance.ReceivedAmount" class="ms-2">Recived Amount</label>
                    <span asp-validation-for="Maintenance.ReceivedAmount" class="text-danger"></span>

                </div>
                @* <div class="form-floating py-2 col-12">
                    <input asp-for="Maintenance.PendingAmount" class="form-control border-0 shadow" />
