                    <select asp-for="Maintenance.OwnerId" asp-items="@Model.FlatOwnersList"  class="form-select border-0 shadow">
                        <option value=""> --Select Owner-- </option>
                    </select>
                    <label asp-for="Maintenance.OwnerId" class="ms-2">Owner Name</label>
                    <span asp-validation-for="Maintenance.OwnerId" class="text-danger"></span>

                </div>
