@model Society_Models.ViewModels.MaintenanceVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Add Maintenance</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" asp-action="Edit">
            <div class="border p-3 mt-4">
                <input asp-for="Maintenance.OwnerId" hidden/>
                <input asp-for="Maintenance.Id" hidden />
                <div class="form-floating py-2 col-12">
                    <input value="@ViewData["OwnerName"]" class="form-control border-0 shadow" />
                    <label asp-for="Maintenance.OwnerId" class="ms-2">Owner Name</label>
                    <span asp-validation-for="Maintenance.OwnerId" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Maintenance.Amount" class="form-control border-0 shadow" />
                    <label asp-for="Maintenance.Amount" class="ms-2"></label>
                    <span asp-validation-for="Maintenance.Amount" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Maintenance.ReceivedAmount" class="form-control border-0 shadow" />
                    <label asp-for="Maintenance.ReceivedAmount" class="ms-2">Received Amount</label>
                    <span asp-validation-for="Maintenance.ReceivedAmount" class="text-danger"></span>

                </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Maintenance.ReceivedDate" type="date" class="form-control border-0 shadow" />
                        <label asp-for="Maintenance.ReceivedDate" class="ms-2">Received Date</label>
                        <span asp-validation-for="Maintenance.ReceivedDate" class="text-danger"></span>

                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Maintenance.EntryDate" type="date" class="form-control border-0 shadow" />
                        <label asp-for="Maintenance.EntryDate" class="ms-2">Entry Date</label>
                        <span asp-validation-for="Maintenance.EntryDate" class="text-danger"></span>
                    </div>

                   

                
