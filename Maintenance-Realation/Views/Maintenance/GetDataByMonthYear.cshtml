@model List<Maintenance>


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Maintenance By Month And Year</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                <form asp-action="GetDataByMonthYear" method="get">
                    <div class="form-group">
                        <label for="month">Month:</label>
                        <input type="month" class="form-control" id="month" name="month" min="1" max="12" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Maintenance" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Maintenance
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        ReceivedAmount
                    </th>
                    <th>
                        PendingAmount
                    </th>
                    <th>
                        ReceivedDate
                    </th>
                    <th>
                        EntryDate
                    </th>
                  
                    <th>
                        FineAmount
                    </th>

                    <th>
                        FlatNumber
                    </th>


                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Amount
                        </td>
                        <td>
                            @obj.ReceivedAmount
                        </td>
                        <td>
                            @obj.PendingAmount
                        </td>
                        <td>
                            @obj.ReceivedDate
                        </td>
                        <td>
                            @obj.EntryDate
                        </td>
                        <td>
                            @obj.FineAmount
                        </td>
                     
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Maintenance" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Maintenance" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>