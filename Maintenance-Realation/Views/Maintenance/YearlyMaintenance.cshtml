@model List<Maintenance>


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Yearly Maintenance</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-3">
               
            </div>
            <div class="col-5">
               
            </div>
            <div class="col-3 text-end">
                <a asp-controller="Maintenance" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Maintenance
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">

            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Received Amount
                    </th>
                    <th>
                        Pending Amount
                    </th>
                    <th>
                        Received Date
                    </th>
                    <th>
                        Entry Date
                    </th>

                    <th>
                        Fine Amount
                    </th>

                    <th>
                        Flat Number
                    </th>


                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.FlatOwner.FirstName</td>
                            <td>
                                @obj.Amount
                            </td>
                            <td>
                                @obj.ReceivedAmount
                            </td>
                            <td style="@(obj.PendingAmount > 0 ? "background-color: #ffcccc;" : "")">
                                @obj.PendingAmount
                            </td>
                            <td>
                                @obj.ReceivedDate
                            </td>
                            <td>
                                @obj.EntryDate
                            </td>

                            <td>
                                @obj.FineAmount
                            </td>
                            <td>
                                @obj.FlatOwner.FlatNumber
                            </td>

                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Maintenance" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Maintenance" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                }
                else
                {
                    <h1>No Maintenance This Month </h1>
                }

            </tbody>
        </table>

    </div>
</div>