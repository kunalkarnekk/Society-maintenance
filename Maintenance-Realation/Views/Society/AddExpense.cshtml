@model SocietyExpenseViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.SocietyExpense.ExpenseId != 0 ? "Update" : "Add") Expense

                </h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form  asp-action="AddExpense" asp-controller="Society" method="post">
            <div class="border p-3 mt-4">
                <input asp-for="SocietyExpense.ExpenseId" hidden />

                <div class="form-floating py-2 col-6">
                    <select class="form-select border-0 shadow" asp-items="@Model.ExpensesList" asp-for="SocietyExpense.ExpenseName">
                        <option value="" disabled selected>Select Expense</option>
                    </select>
                    <span asp-validation-for="SocietyExpense.ExpenseName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <input asp-for="SocietyExpense.ExpenseAmount" class="form-control border-0 shadow" />
                    <label asp-for="SocietyExpense.ExpenseAmount" class="ms-2">Expense Amount</label>
                    <span asp-validation-for="SocietyExpense.ExpenseAmount" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <input asp-for="SocietyExpense.ExpenseDate" class="form-control border-0 shadow" />
                    <label asp-for="SocietyExpense.ExpenseDate" class="ms-2">Expense Date</label>
                    <span asp-validation-for="SocietyExpense.ExpenseDate" class="text-danger"></span>
                </div>


            </div>


            <div class="row mt-3 ">

                <div class="col-6 col-md-3 text-end">
                    <button type="submit" class="btn btn-primary form-control text-center">Submit</button>
                </div>
            </div>


        </form>
    </div>
</div>

