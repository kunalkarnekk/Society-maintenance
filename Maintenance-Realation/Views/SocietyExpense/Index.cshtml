@model List<Expense>


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">All Expenses</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-5">
                <div class="card">
                    @* <div class="card-header">
                        <h3>Monthly Expenses Summary - @DateTime.Now.ToString("MMMM-yy")</h3>
                    </div *@
                    <div class="card-body">
                        <div class="summary">
                            <div class="summary-item">
                                <h5>Debit Monthly Expense</h5>
                                <p>@ViewBag.ExpenseAmountMonthly</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-4">
                @* <div class="card">
                   <form method="get" asp-action="Index" asp-controller="SocietyExpense">
                        <div class="form-floating py-2 col-12">
                            <input name="date" type="date" class="form-control border-0 shadow" />
                            <button class="btn btn-primary ">Show</button>
                        </div>
                   </form>
                </div> *@

            </div>
            <div class="col-3 text-end">
                <a asp-controller="SocietyExpense" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Expense
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Expense Amount
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Frequency
                    </th>
                    <th>
                        Expense Date
                    </th>
                    @* <th>
                        Expense By
                    </th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.ExpenseName</td>
                        <td>@obj.ExpenseAmount</td>
                        <td>@obj.Description</td>
                        <td>@obj.Frequency</td>
                        <td>@obj.ExpenseDate</td>
                        @* <td>@obj.ExpenseBy</td> *@
                       

                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="SocietyExpense" asp-action="Upsert" asp-route-id="@obj.ExpenseId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="SocietyExpense" asp-action="Delete" asp-route-id="@obj.ExpenseId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>