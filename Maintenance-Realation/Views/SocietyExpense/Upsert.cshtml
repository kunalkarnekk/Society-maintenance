@model Expense

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.ExpenseId != 0 ? "Update" : "Add") Society Expense

                </h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" asp-action="Upsert" asp-controller="SocietyExpense">

            
            <div class="border p-3 mt-4">
                <input asp-for="ExpenseId" hidden />
                <div class="row">
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ExpenseName" class="form-control border-0 shadow" />
                    <label asp-for="ExpenseName" class="ms-2">Expense Name</label>
                    <span asp-validation-for="ExpenseName" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ExpenseAmount" class="form-control border-0 shadow" />
                    <label asp-for="ExpenseAmount" class="ms-2">Expense Amount</label>
                    <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="Frequency" asp-items="@Html.GetEnumSelectList<Frequency>()" class="form-select border-0 shadow">
                        <option value="" selected disabled>select Frequency</option>
                    </select>
                    <label asp-for="Frequency" class="ms-2"></label>
                    <span asp-validation-for="Frequency" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ExpenseDate" type="date" class="form-control border-0 shadow" />
                    <label asp-for="ExpenseDate" class="ms-2">Expense Date</label>
                    <span asp-validation-for="ExpenseDate" class="text-danger"></span>
                </div>
     
            </div>


            <div class="row mt-3">
                @{

                    if (Model.ExpenseId == 0)
                    {
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        </div>
                    }
                    else
                    {
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        </div>
                    }

                }


                <div class="col-6 col-md-3">
                    <a asp-controller="SocietyExpense" asp-action="Index" class="btn btn-secondary border  form-control">
                        Back to List
                    </a>
                </div>
            </div>


        </form>
    </div>
</div>

